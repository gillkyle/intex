@model IEnumerable<NL.Models.Sample>

@{
    ViewBag.Title = "Sample";
}

<h2>Samples</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.Compound.Name)*@
            Compound Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Compound.LTNum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SequenceCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Concentration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Weight_mg)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    if (ViewBag.LTNum == item.Compound.LTNum)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Compound.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Compound.LTNum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SequenceCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Concentration)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Weight_mg)
        </td>
        <td>
            @Html.ActionLink("View Assay(s)", "TestResults", "AssayTests", new { SampleID=item.SampleID }, new { @class = "btn btn-secondary outline" })
            @*@Html.ActionLink("Details", "Details", new { id=item.SampleID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SampleID })*@
        </td>
    </tr>
    }
}

</table>
